#about {
background-color: #000001;
}

#about p {
	color: white;
}

#ui-container {
	background-color: #000000;
}

header {
	background-color: #000000;
}
h2{
	margin: 0;
	padding: 0.5em 0;
}

h2,
#team h2 + p,
#projects h2 + p,
#contact h2 + p {
	text-align: center;
}

h3{
	font-size: 1.5em;
}

p {
	font-size: 1.3em;
}

section {
	margin-bottom: 1em;
}

.target {
	height: 5em;
	margin-top: -5em;
}

#keyvisuals > div > div,
#projects div {
	display: -webkit-box;
	display: -ms-flexbox;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-ms-flex-pack: center;
	-webkit-justify-content: center;
	justify-content: center;
	-webkit-box-align: center;
	-ms-flex-align: center;
	-webkit-align-items: center;
	align-items: center;
}


/*    NAVIGATION    */

nav.ui.menu {
	background: none;
	box-shadow: none;
	border: none;
}

nav.ui.menu .item {
	font-size: 2em;
	color: white;
	transition: all ease-in-out 0.5s;
}

nav.ui.menu .item:hover {
	opacity: 0.9;
}

nav.ui.menu.scrolling {
	background-image: url("../assets/img/opacity/black-50.png");
}

nav.ui.menu.scrolling .item {
	font-size: 1.8em;
}

nav.sidebar.ui.menu > .item {
	padding-right: 0;
	padding-left: 0.6em;
}

nav.sidebar.ui.menu > .menu .item {
	font-size: 1.8em !important;
	padding-left: 0.7em;
}

nav.sidebar.ui.menu > .item {
	padding-right: 0;
	padding-left: 0.6em;
}

nav.sidebar.ui.menu > .menu .item {
	font-size: 1.8em !important;
	padding-left: 0.7em;
}


/*    KEYVISUALS    */

#keyvisuals > div > div {
	height: 100vh;
	width: 100vw;
	background-repeat: no-repeat;
	background-position: center center;
	-webkit-background-size: cover;
	-moz-background-size: cover;
	-o-background-size: cover;
	background-size: cover;
}

#keyvisuals h1,
#keyvisuals p {
	padding: 0 1em;
	color: white;
	text-shadow: 0.02em 0.02em 0.2em #333;
}

#keyvisuals h1 {
	font-size: 2.8em;
}

#keyvisuals p {
	text-align: center;
	font-size: 1.6em;
}

.swiper-pagination-bullet {
	width: 1.2em;
	height: 1.2em;
	opacity: 1;
	background: none;
	border: 2px solid white;
}

.swiper-pagination-bullet-active {
	background: white;
}

.swiper-button-prev,
.swiper-button-next {
	color: white;
}


#team img {
	width: 100%;
	border-radius: 50%;
}

#projects a {
	font-size: 1.4em;
	line-height: 1.2em;
	position: absolute;
	text-align: center;
	color: white;
	margin: 0 1.5em;
	padding: 0.4em;
	background-color: rgba(0, 0, 0, 0.6);
}


#projects img {
	width: 100%;
}

/*  VIDEO  */

.ui.modal {
	width: 890px;
	height: 504px;
}

video {
	border: 0;
	margin: 0 !important;
	outline: 0 !important;
}


#contact {
	padding-top: 1em;
	background: #eee;
}


footer{
	padding: 1em 0;
}